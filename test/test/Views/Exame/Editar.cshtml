                        @Html.CheckBox(" ", new { @class = "input", @id = "tipo-imagem", @onclick = "unSelectOption('tipo-laboratorial')", @readonly = "readonly" })
                        Exame de Imagem
                    </label>
                </div>
            </div>
        </div>
        <div class="container-ficha-aso-ativo">
            <div class="checkbox">
                <label for="exibficha">
                    @Html.CheckBoxFor(model => model.ExibFicha, new { @class = "input", id = "exibficha" })
                    Exibir Ficha
                </label>
            </div>
            <div class="checkbox">
                <label for="exibaso">
                    @Html.CheckBoxFor(model => model.ExibASO, new { @class = "input", id = "exibaso" })
                    Exibir ASO
                </label>
            </div>
            <div class="checkbox">
                <label for="ativo-exame">
                    @Html.CheckBoxFor(model => model.Ativo, new { @class = "input", id = "ativo-exame" })
                    Ativo
                </label>
            </div>
        </div>
    </div>
</div>
}