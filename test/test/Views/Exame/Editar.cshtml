                    </label>
                </div>
                <div class="checkbox">
                    <label for="tipo-imagem">
                        @*@Html.RadioButtonFor(model => model.Tipo, 2, new { @class = "input", id = "tipo-imagem", name = "tipo", value = 2 })*@
