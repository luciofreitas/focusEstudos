<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Adicione as referências ao Bootstrap CSS e jQuery -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <link rel="stylesheet" href="~/Content/Style.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>


    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li>@Html.ActionLink("Empregados", "Index", "EmpregadosDTO")</li>
                    <li>@Html.ActionLink("Empregados MultiEmpresas", "Index", "MultiEmpresas")</li>
                    <li>@Html.ActionLink("Exames", "Index", "Exame")</li>
                    <li>@Html.ActionLink("Empresas", "Index", "Empresa")</li>
                    <li>@Html.ActionLink("Setores", "Index", "Setor")</li>
                    <li>@Html.ActionLink("Funções", "Index", "Funcao")</li>
                    <li>@Html.ActionLink("Estados", "Index", "Estado")</li>
                    <li>@Html.ActionLink("Cidades", "Index", "Cidade")</li>
                    <li>@Html.ActionLink("Atividades Economicas", "Index", "AtividadeEconomica")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Focus Health Solutions</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="https://use.fontawesome.com/62e43a72a9.js"></script>
    <script src="~/Scripts/script.js"></script>
    
    <script src="~/Scripts/mascara.min.js"></script>

</body>
</html>

